<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/rlguardian">

    <EditText
        android:id="@+id/guardianSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="71dp"
        android:layout_marginTop="149dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Enter Search Text"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/searchGuardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/guardianSearch"
        android:layout_below="@+id/guardianSearch"
        android:layout_marginStart="37dp"
        android:layout_marginTop="31dp"
        android:text="Search Guardian"
        android:onClick="searchGuardianAPI"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchGuardian"
        android:layout_alignParentTop="true"></ListView>





</RelativeLayout>